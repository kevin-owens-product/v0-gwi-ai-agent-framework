generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ==================== MULTI-TENANCY ====================

model Organization {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  planTier    PlanTier @default(STARTER)
  settings    Json     @default("{}")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Multi-level hierarchy fields
  orgType           OrganizationType    @default(STANDARD)
  parentOrgId       String?             // Direct parent organization
  rootOrgId         String?             // Top-level organization in hierarchy (for quick queries)
  hierarchyPath     String              @default("/") // Materialized path for efficient tree queries (e.g., "/rootId/parentId/id/")
  hierarchyLevel    Int                 @default(0)   // Depth in the hierarchy (0 = root)
  maxChildDepth     Int                 @default(5)   // Maximum allowed child depth
  displayOrder      Int                 @default(0)   // Ordering among siblings

  // Hierarchy settings
  hierarchySettings Json                @default("{}") // Hierarchy-specific configurations
  inheritSettings   Boolean             @default(true) // Whether to inherit parent settings
  allowChildOrgs    Boolean             @default(false) // Whether this org can have children

  // Branding and identity
  logoUrl           String?
  brandColor        String?             // Primary brand color
  domain            String?             @unique // Custom domain for white-labeling

  // Industry and categorization
  industry          String?
  companySize       CompanySize?
  country           String?
  timezone          String              @default("UTC")

  // Hierarchy relationships
  parentOrg         Organization?       @relation("OrgHierarchy", fields: [parentOrgId], references: [id])
  childOrgs         Organization[]      @relation("OrgHierarchy")
  rootOrg           Organization?       @relation("RootOrgRef", fields: [rootOrgId], references: [id])
  descendantOrgs    Organization[]      @relation("RootOrgRef")

  // Cross-org relationships (partnerships, etc.)
  relationshipsFrom OrgRelationship[]   @relation("RelationshipFrom")
  relationshipsTo   OrgRelationship[]   @relation("RelationshipTo")

  // Shared resource access
  sharedResourceAccess SharedResourceAccess[] @relation("SharedResourceOrg")
  sharedResources      SharedResourceAccess[] @relation("SharedResourceOwner")

  // Role inheritance configurations
  roleInheritanceRules RoleInheritanceRule[]

  members       OrganizationMember[]
  agents        Agent[]
  dataSources   DataSource[]
  insights      Insight[]
  auditLogs     AuditLog[]
  usageRecords  UsageRecord[]
  apiKeys       ApiKey[]
  ssoConfig     SSOConfiguration?
  subscription  BillingSubscription?
  invitations   Invitation[]
  workflows     Workflow[]
  reports       Report[]
  dashboards    Dashboard[]
  crosstabs     Crosstab[]
  audiences     Audience[]
  memories      Memory[]
  charts        Chart[]
  templates     Template[]
  brandTrackings BrandTracking[]
  brandSnapshots BrandTrackingSnapshot[]

  @@index([parentOrgId])
  @@index([rootOrgId])
  @@index([hierarchyPath])
  @@index([orgType])
  @@index([industry])
  @@index([domain])
}

model OrganizationMember {
  id        String   @id @default(cuid())
  orgId     String
  userId    String
  role      Role     @default(MEMBER)
  invitedBy String?
  joinedAt  DateTime @default(now())

  organization Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)
  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([orgId, userId])
  @@index([orgId])
  @@index([userId])
}

enum PlanTier {
  STARTER
  PROFESSIONAL
  ENTERPRISE
}

enum Role {
  OWNER
  ADMIN
  MEMBER
  VIEWER
}

// ==================== ORGANIZATION HIERARCHY TYPES ====================

enum OrganizationType {
  STANDARD          // Default individual organization
  AGENCY            // Marketing/advertising agency managing clients
  HOLDING_COMPANY   // Parent company owning multiple subsidiaries
  SUBSIDIARY        // Company owned by a holding company
  BRAND             // Individual brand entity
  SUB_BRAND         // Sub-brand under a parent brand
  DIVISION          // Business division within an enterprise
  DEPARTMENT        // Department within a division or org
  FRANCHISE         // Franchise organization
  FRANCHISEE        // Individual franchise location
  RESELLER          // Partner that resells to clients
  CLIENT            // Client organization (managed by agency/reseller)
  REGIONAL          // Regional entity (e.g., EMEA, APAC)
  PORTFOLIO_COMPANY // Company within a PE/VC portfolio
}

enum CompanySize {
  SOLO              // 1 person
  SMALL             // 2-10 employees
  MEDIUM            // 11-50 employees
  LARGE             // 51-200 employees
  ENTERPRISE        // 201-1000 employees
  GLOBAL            // 1000+ employees
}

enum OrgRelationshipType {
  OWNERSHIP         // Full ownership (holding company -> subsidiary)
  MANAGEMENT        // Management access (agency -> client)
  PARTNERSHIP       // Partnership/collaboration
  LICENSING         // Licensing agreement (franchisor -> franchisee)
  RESELLER          // Reseller relationship
  WHITE_LABEL       // White-label partnership
  DATA_SHARING      // Data sharing agreement only
  CONSORTIUM        // Part of a consortium/group
}

enum RelationshipStatus {
  PENDING           // Awaiting acceptance
  ACTIVE            // Currently active
  SUSPENDED         // Temporarily suspended
  TERMINATED        // Ended
}

enum BillingRelationship {
  INDEPENDENT       // Each org handles own billing
  PARENT_PAYS       // Parent pays for child
  CONSOLIDATED      // Consolidated billing across hierarchy
  PASS_THROUGH      // Parent bills but passes costs through
  SUBSIDIZED        // Parent partially subsidizes
}

enum ResourceSharingScope {
  NONE              // No sharing
  READ_ONLY         // Can view but not modify
  FULL_ACCESS       // Full access to shared resources
  INHERIT           // Inherit from parent org settings
}

enum SharedResourceType {
  TEMPLATE          // Report/dashboard templates
  AUDIENCE          // Audience definitions
  DATA_SOURCE       // Data source configurations
  BRAND_TRACKING    // Brand tracking setups
  WORKFLOW          // Workflow configurations
  AGENT             // AI agent configurations
  CHART             // Chart configurations
  ALL               // All resource types
}

// ==================== ORGANIZATION RELATIONSHIPS ====================

model OrgRelationship {
  id                String               @id @default(cuid())
  fromOrgId         String               // The org initiating/controlling the relationship
  toOrgId           String               // The org being related to
  relationshipType  OrgRelationshipType
  status            RelationshipStatus   @default(PENDING)

  // Permissions granted through this relationship
  permissions       Json                 @default("{}") // Granular permissions
  accessLevel       ResourceSharingScope @default(READ_ONLY)

  // Billing configuration
  billingRelation   BillingRelationship  @default(INDEPENDENT)
  billingConfig     Json                 @default("{}")

  // Relationship metadata
  contractStart     DateTime?
  contractEnd       DateTime?
  notes             String?
  metadata          Json                 @default("{}")

  // Approval tracking
  initiatedBy       String               // User who created
  approvedBy        String?              // User who approved (if applicable)
  approvedAt        DateTime?

  createdAt         DateTime             @default(now())
  updatedAt         DateTime             @updatedAt

  fromOrg           Organization         @relation("RelationshipFrom", fields: [fromOrgId], references: [id], onDelete: Cascade)
  toOrg             Organization         @relation("RelationshipTo", fields: [toOrgId], references: [id], onDelete: Cascade)

  @@unique([fromOrgId, toOrgId, relationshipType])
  @@index([fromOrgId])
  @@index([toOrgId])
  @@index([relationshipType])
  @@index([status])
}

// ==================== SHARED RESOURCE ACCESS ====================

model SharedResourceAccess {
  id                String               @id @default(cuid())
  ownerOrgId        String               // Organization that owns the resource
  targetOrgId       String               // Organization granted access
  resourceType      SharedResourceType
  resourceId        String?              // Specific resource ID, null = all of type
  accessLevel       ResourceSharingScope

  // Fine-grained permissions
  canView           Boolean              @default(true)
  canEdit           Boolean              @default(false)
  canDelete         Boolean              @default(false)
  canShare          Boolean              @default(false) // Can re-share with others

  // Propagation settings
  propagateToChildren Boolean            @default(false) // Share with target's children too

  // Validity
  expiresAt         DateTime?
  isActive          Boolean              @default(true)

  grantedBy         String               // User who granted access
  createdAt         DateTime             @default(now())
  updatedAt         DateTime             @updatedAt

  ownerOrg          Organization         @relation("SharedResourceOwner", fields: [ownerOrgId], references: [id], onDelete: Cascade)
  targetOrg         Organization         @relation("SharedResourceOrg", fields: [targetOrgId], references: [id], onDelete: Cascade)

  @@unique([ownerOrgId, targetOrgId, resourceType, resourceId])
  @@index([ownerOrgId])
  @@index([targetOrgId])
  @@index([resourceType])
  @@index([isActive])
}

// ==================== ROLE INHERITANCE RULES ====================

model RoleInheritanceRule {
  id                String    @id @default(cuid())
  orgId             String    // The org where this rule applies

  // Rule definition
  name              String
  description       String?

  // Source role (in parent org)
  sourceRole        Role
  sourceOrgType     OrganizationType? // Optional: only apply for certain org types

  // Target role (in this/child org)
  targetRole        Role

  // Inheritance direction
  inheritUp         Boolean   @default(false) // Role inherits upward to parent
  inheritDown       Boolean   @default(true)  // Role inherits downward to children
  inheritLevels     Int       @default(1)     // How many levels to inherit (-1 = unlimited)

  // Conditions
  requiresApproval  Boolean   @default(false)
  conditions        Json      @default("{}") // Additional conditions

  isActive          Boolean   @default(true)
  priority          Int       @default(0)    // Higher = evaluated first

  createdBy         String
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  organization      Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)

  @@index([orgId])
  @@index([sourceRole])
  @@index([isActive])
}

// ==================== HIERARCHY AUDIT LOG ====================

model HierarchyAuditLog {
  id                String    @id @default(cuid())
  orgId             String    // Organization affected
  actorOrgId        String?   // Organization of the actor (may differ for cross-org actions)
  actorUserId       String

  action            HierarchyAction
  targetOrgId       String?   // Target org for relationship actions

  previousState     Json?     // State before change
  newState          Json?     // State after change

  metadata          Json      @default("{}")
  ipAddress         String?
  userAgent         String?

  timestamp         DateTime  @default(now())

  @@index([orgId])
  @@index([actorOrgId])
  @@index([actorUserId])
  @@index([action])
  @@index([timestamp])
}

enum HierarchyAction {
  ORG_CREATED
  ORG_MOVED            // Changed parent
  ORG_TYPE_CHANGED
  RELATIONSHIP_CREATED
  RELATIONSHIP_UPDATED
  RELATIONSHIP_TERMINATED
  RESOURCE_SHARED
  RESOURCE_UNSHARED
  ACCESS_GRANTED
  ACCESS_REVOKED
  ROLE_INHERITED
  SETTINGS_INHERITED
  BILLING_CHANGED
}

// ==================== HIERARCHY TEMPLATES ====================

model HierarchyTemplate {
  id                String    @id @default(cuid())
  name              String
  description       String?

  // Template structure
  structure         Json      // Predefined org structure template
  defaultSettings   Json      @default("{}") // Default settings for orgs in this template
  defaultRules      Json      @default("{}") // Default inheritance rules

  // Applicability
  applicableToTypes OrganizationType[]
  industry          String?   // Industry-specific template

  // Template metadata
  isPublic          Boolean   @default(false) // Available to all
  isOfficial        Boolean   @default(false) // Platform-provided template
  usageCount        Int       @default(0)

  createdBy         String?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  @@index([isPublic])
  @@index([applicableToTypes])
  @@index([industry])
}

// ==================== CROSS-ORG INVITATIONS ====================

model CrossOrgInvitation {
  id                String               @id @default(cuid())
  fromOrgId         String               // Inviting organization
  toEmail           String               // Email of invitee
  toOrgId           String?              // If inviting existing org

  relationshipType  OrgRelationshipType
  proposedRole      Role                 @default(MEMBER)
  proposedAccess    ResourceSharingScope @default(READ_ONLY)

  // New org creation (if toOrgId is null)
  newOrgName        String?
  newOrgType        OrganizationType?

  // Invitation details
  message           String?
  token             String               @unique
  status            CrossOrgInviteStatus @default(PENDING)

  expiresAt         DateTime
  respondedAt       DateTime?

  invitedBy         String               // User who sent invite
  createdAt         DateTime             @default(now())

  @@index([fromOrgId])
  @@index([toEmail])
  @@index([toOrgId])
  @@index([token])
  @@index([status])
}

enum CrossOrgInviteStatus {
  PENDING
  ACCEPTED
  DECLINED
  EXPIRED
  REVOKED
}

// ==================== USERS & AUTH ====================

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  avatarUrl     String?
  passwordHash  String?
  emailVerified DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  memberships   OrganizationMember[]
  sessions      Session[]
  accounts      Account[]
  apiKeys       ApiKey[]
  auditLogs     AuditLog[]
  agentsCreated Agent[]
  templatesCreated Template[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  ipAddress    String?
  userAgent    String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model SSOConfiguration {
  id           String  @id @default(cuid())
  orgId        String  @unique
  provider     String  // 'saml' | 'oidc' | 'azure_ad'
  metadataUrl  String?
  clientId     String?
  clientSecret String?
  settings     Json    @default("{}")
  enabled      Boolean @default(false)

  organization Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)
}

// ==================== AGENT FRAMEWORK CORE ====================

model Agent {
  id            String      @id @default(cuid())
  orgId         String
  name          String
  description   String?
  type          AgentType
  configuration Json        @default("{}")
  status        AgentStatus @default(DRAFT)
  createdBy     String
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  organization Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)
  creator      User         @relation(fields: [createdBy], references: [id])
  runs         AgentRun[]

  @@index([orgId])
  @@index([createdBy])
}

enum AgentType {
  RESEARCH
  ANALYSIS
  REPORTING
  MONITORING
  CUSTOM
}

enum AgentStatus {
  DRAFT
  ACTIVE
  PAUSED
  ARCHIVED
}

model AgentRun {
  id           String         @id @default(cuid())
  agentId      String
  orgId        String
  input        Json
  output       Json?
  status       AgentRunStatus @default(PENDING)
  tokensUsed   Int            @default(0)
  startedAt    DateTime       @default(now())
  completedAt  DateTime?
  errorMessage String?

  agent    Agent     @relation(fields: [agentId], references: [id], onDelete: Cascade)
  insights Insight[]

  @@index([agentId])
  @@index([orgId])
  @@index([status])
}

enum AgentRunStatus {
  PENDING
  RUNNING
  COMPLETED
  FAILED
  CANCELLED
}

model DataSource {
  id               String           @id @default(cuid())
  orgId            String
  name             String
  type             DataSourceType
  connectionConfig Json             @default("{}")
  lastSync         DateTime?
  status           DataSourceStatus @default(PENDING)
  createdAt        DateTime         @default(now())
  updatedAt        DateTime         @updatedAt

  organization Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)

  @@index([orgId])
}

enum DataSourceType {
  API
  DATABASE
  FILE_UPLOAD
  WEBHOOK
  INTEGRATION
}

enum DataSourceStatus {
  PENDING
  CONNECTED
  ERROR
  DISABLED
}

model Insight {
  id              String   @id @default(cuid())
  orgId           String
  agentRunId      String?
  type            String
  title           String
  data            Json
  confidenceScore Float?
  createdAt       DateTime @default(now())

  organization Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)
  agentRun     AgentRun?    @relation(fields: [agentRunId], references: [id])

  @@index([orgId])
  @@index([agentRunId])
}

// ==================== ENTERPRISE FEATURES ====================

model AuditLog {
  id           String   @id @default(cuid())
  orgId        String
  userId       String?
  action       String
  resourceType String
  resourceId   String?
  metadata     Json     @default("{}")
  ipAddress    String?
  userAgent    String?
  timestamp    DateTime @default(now())

  organization Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)
  user         User?        @relation(fields: [userId], references: [id])

  @@index([orgId])
  @@index([userId])
  @@index([timestamp])
  @@index([action])
}

model UsageRecord {
  id         String      @id @default(cuid())
  orgId      String
  metricType UsageMetric
  quantity   Int
  recordedAt DateTime    @default(now())

  organization Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)

  @@index([orgId])
  @@index([metricType])
  @@index([recordedAt])
}

enum UsageMetric {
  AGENT_RUNS
  TOKENS_CONSUMED
  API_CALLS
  DATA_SOURCES
  TEAM_SEATS
  STORAGE_GB
}

model BillingSubscription {
  id                   String             @id @default(cuid())
  orgId                String             @unique
  stripeCustomerId     String?
  stripeSubscriptionId String?
  planId               String
  status               SubscriptionStatus @default(TRIALING)
  currentPeriodEnd     DateTime?
  cancelAtPeriodEnd    Boolean            @default(false)
  createdAt            DateTime           @default(now())
  updatedAt            DateTime           @updatedAt

  organization Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)
}

enum SubscriptionStatus {
  TRIALING
  ACTIVE
  PAST_DUE
  CANCELED
  UNPAID
}

model ApiKey {
  id          String    @id @default(cuid())
  orgId       String
  userId      String
  name        String
  keyPrefix   String    // First 8 chars for identification
  keyHash     String    // SHA-256 hash of full key
  permissions String[]  @default([])
  rateLimit   Int       @default(100) // requests per minute
  lastUsed    DateTime?
  expiresAt   DateTime?
  createdAt   DateTime  @default(now())

  organization Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)
  user         User         @relation(fields: [userId], references: [id])

  @@index([orgId])
  @@index([keyHash])
}

model Invitation {
  id        String           @id @default(cuid())
  orgId     String
  email     String
  role      Role             @default(MEMBER)
  token     String           @unique
  status    InvitationStatus @default(PENDING)
  expiresAt DateTime
  createdAt DateTime         @default(now())

  organization Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)

  @@index([orgId])
  @@index([email])
  @@index([token])
}

enum InvitationStatus {
  PENDING
  ACCEPTED
  EXPIRED
  REVOKED
}

// ==================== WORKFLOWS ====================

model Workflow {
  id          String         @id @default(cuid())
  orgId       String
  name        String
  description String?
  status      WorkflowStatus @default(DRAFT)
  schedule    String?        // cron expression or "on-demand"
  agents      String[]       // array of agent IDs in execution order
  configuration Json         @default("{}")
  lastRun     DateTime?
  nextRun     DateTime?
  runCount    Int            @default(0)
  createdBy   String
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt

  organization Organization   @relation(fields: [orgId], references: [id], onDelete: Cascade)
  runs         WorkflowRun[]

  @@index([orgId])
  @@index([status])
  @@index([createdBy])
}

model WorkflowRun {
  id           String            @id @default(cuid())
  workflowId   String
  orgId        String
  status       WorkflowRunStatus @default(PENDING)
  input        Json              @default("{}")
  output       Json?
  startedAt    DateTime          @default(now())
  completedAt  DateTime?
  errorMessage String?

  workflow Workflow @relation(fields: [workflowId], references: [id], onDelete: Cascade)

  @@index([workflowId])
  @@index([orgId])
  @@index([status])
}

enum WorkflowStatus {
  DRAFT
  ACTIVE
  PAUSED
  ARCHIVED
}

enum WorkflowRunStatus {
  PENDING
  RUNNING
  COMPLETED
  FAILED
  CANCELLED
}

// ==================== REPORTS ====================

model Report {
  id          String       @id @default(cuid())
  orgId       String
  title       String
  description String?
  type        ReportType
  status      ReportStatus @default(DRAFT)
  content     Json         @default("{}")
  thumbnail   String?
  agentId     String?      // agent that generated this report
  views       Int          @default(0)
  createdBy   String
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  organization Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)

  @@index([orgId])
  @@index([status])
  @@index([type])
  @@index([createdBy])
}

enum ReportType {
  PRESENTATION
  DASHBOARD
  PDF
  EXPORT
  INFOGRAPHIC
}

enum ReportStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

// ==================== DASHBOARDS ====================

model Dashboard {
  id          String          @id @default(cuid())
  orgId       String
  name        String
  description String?
  layout      Json            @default("[]") // grid layout configuration
  widgets     Json            @default("[]") // array of widget configurations
  status      DashboardStatus @default(DRAFT)
  isPublic    Boolean         @default(false)
  views       Int             @default(0)
  createdBy   String
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt

  organization Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)

  @@index([orgId])
  @@index([status])
  @@index([createdBy])
}

enum DashboardStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

// ==================== CROSSTABS ====================

model Crosstab {
  id          String   @id @default(cuid())
  orgId       String
  name        String
  description String?
  audiences   String[] // array of audience IDs
  metrics     String[] // array of metric identifiers
  filters     Json     @default("{}")
  results     Json?    // cached results
  views       Int      @default(0)
  createdBy   String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  organization Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)

  @@index([orgId])
  @@index([createdBy])
}

// ==================== AUDIENCES ====================

model Audience {
  id           String   @id @default(cuid())
  orgId        String
  name         String
  description  String?
  criteria     Json     @default("{}") // audience definition criteria
  size         Int?     // estimated audience size
  markets      String[] // array of market codes
  isFavorite   Boolean  @default(false)
  lastUsed     DateTime?
  usageCount   Int      @default(0)
  createdBy    String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  organization Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)

  @@index([orgId])
  @@index([createdBy])
  @@index([isFavorite])
}

// ==================== MEMORY / CONTEXT ====================

model Memory {
  id          String     @id @default(cuid())
  orgId       String
  agentId     String?
  type        MemoryType
  key         String
  value       Json
  metadata    Json       @default("{}")
  expiresAt   DateTime?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  organization Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)

  @@unique([orgId, agentId, type, key])
  @@index([orgId])
  @@index([agentId])
  @@index([type])
}

enum MemoryType {
  CONTEXT
  PREFERENCE
  FACT
  CONVERSATION
  CACHE
}

// ==================== CHARTS ====================

model Chart {
  id          String      @id @default(cuid())
  orgId       String
  name        String
  description String?
  type        ChartType
  config      Json        @default("{}") // chart configuration
  data        Json?       // cached data
  dataSource  String?     // reference to data source
  status      ChartStatus @default(DRAFT)
  createdBy   String
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  organization Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)

  @@index([orgId])
  @@index([type])
  @@index([createdBy])
}

enum ChartType {
  BAR
  LINE
  PIE
  DONUT
  AREA
