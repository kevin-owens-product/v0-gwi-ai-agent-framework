generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ==================== MULTI-TENANCY ====================

model Organization {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  planTier    PlanTier @default(STARTER)
  settings    Json     @default("{}")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  members       OrganizationMember[]
  agents        Agent[]
  dataSources   DataSource[]
  insights      Insight[]
  auditLogs     AuditLog[]
  usageRecords  UsageRecord[]
  apiKeys       ApiKey[]
  ssoConfig     SSOConfiguration?
  subscription  BillingSubscription?
  invitations   Invitation[]
  workflows     Workflow[]
  reports       Report[]
  dashboards    Dashboard[]
  crosstabs     Crosstab[]
  audiences     Audience[]
  memories      Memory[]
  charts        Chart[]
  templates     Template[]
  brandTrackings BrandTracking[]
  brandSnapshots BrandTrackingSnapshot[]
}

model OrganizationMember {
  id        String   @id @default(cuid())
  orgId     String
  userId    String
  role      Role     @default(MEMBER)
  invitedBy String?
  joinedAt  DateTime @default(now())

  organization Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)
  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([orgId, userId])
  @@index([orgId])
  @@index([userId])
}

enum PlanTier {
  STARTER
  PROFESSIONAL
  ENTERPRISE
}

enum Role {
  OWNER
  ADMIN
  MEMBER
  VIEWER
}

// ==================== USERS & AUTH ====================

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  avatarUrl     String?
  passwordHash  String?
  emailVerified DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  memberships   OrganizationMember[]
  sessions      Session[]
  accounts      Account[]
  apiKeys       ApiKey[]
  auditLogs     AuditLog[]
  agentsCreated Agent[]
  templatesCreated Template[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  ipAddress    String?
  userAgent    String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model SSOConfiguration {
  id           String  @id @default(cuid())
  orgId        String  @unique
  provider     String  // 'saml' | 'oidc' | 'azure_ad'
  metadataUrl  String?
  clientId     String?
  clientSecret String?
  settings     Json    @default("{}")
  enabled      Boolean @default(false)

  organization Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)
}

// ==================== AGENT FRAMEWORK CORE ====================

model Agent {
  id            String      @id @default(cuid())
  orgId         String
  name          String
  description   String?
  type          AgentType
  configuration Json        @default("{}")
  status        AgentStatus @default(DRAFT)
  createdBy     String
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  organization Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)
  creator      User         @relation(fields: [createdBy], references: [id])
  runs         AgentRun[]

  @@index([orgId])
  @@index([createdBy])
}

enum AgentType {
  RESEARCH
  ANALYSIS
  REPORTING
  MONITORING
  CUSTOM
}

enum AgentStatus {
  DRAFT
  ACTIVE
  PAUSED
  ARCHIVED
}

model AgentRun {
  id           String         @id @default(cuid())
  agentId      String
  orgId        String
  input        Json
  output       Json?
  status       AgentRunStatus @default(PENDING)
  tokensUsed   Int            @default(0)
  startedAt    DateTime       @default(now())
  completedAt  DateTime?
  errorMessage String?

  agent    Agent     @relation(fields: [agentId], references: [id], onDelete: Cascade)
  insights Insight[]

  @@index([agentId])
  @@index([orgId])
  @@index([status])
}

enum AgentRunStatus {
  PENDING
  RUNNING
  COMPLETED
  FAILED
  CANCELLED
}

model DataSource {
  id               String           @id @default(cuid())
  orgId            String
  name             String
  type             DataSourceType
  connectionConfig Json             @default("{}")
  lastSync         DateTime?
  status           DataSourceStatus @default(PENDING)
  createdAt        DateTime         @default(now())
  updatedAt        DateTime         @updatedAt

  organization Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)

  @@index([orgId])
}

enum DataSourceType {
  API
  DATABASE
  FILE_UPLOAD
  WEBHOOK
  INTEGRATION
}

enum DataSourceStatus {
  PENDING
  CONNECTED
  ERROR
  DISABLED
}

model Insight {
  id              String   @id @default(cuid())
  orgId           String
  agentRunId      String?
  type            String
  title           String
  data            Json
  confidenceScore Float?
  createdAt       DateTime @default(now())

  organization Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)
  agentRun     AgentRun?    @relation(fields: [agentRunId], references: [id])

  @@index([orgId])
  @@index([agentRunId])
}

// ==================== ENTERPRISE FEATURES ====================

model AuditLog {
  id           String   @id @default(cuid())
  orgId        String
  userId       String?
  action       String
  resourceType String
  resourceId   String?
  metadata     Json     @default("{}")
  ipAddress    String?
  userAgent    String?
  timestamp    DateTime @default(now())

  organization Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)
  user         User?        @relation(fields: [userId], references: [id])

  @@index([orgId])
  @@index([userId])
  @@index([timestamp])
  @@index([action])
}

model UsageRecord {
  id         String      @id @default(cuid())
  orgId      String
  metricType UsageMetric
  quantity   Int
  recordedAt DateTime    @default(now())

  organization Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)

  @@index([orgId])
  @@index([metricType])
  @@index([recordedAt])
}

enum UsageMetric {
  AGENT_RUNS
  TOKENS_CONSUMED
  API_CALLS
  DATA_SOURCES
  TEAM_SEATS
  STORAGE_GB
}

model BillingSubscription {
  id                   String             @id @default(cuid())
  orgId                String             @unique
  stripeCustomerId     String?
  stripeSubscriptionId String?
  planId               String
  status               SubscriptionStatus @default(TRIALING)
  currentPeriodEnd     DateTime?
  cancelAtPeriodEnd    Boolean            @default(false)
  createdAt            DateTime           @default(now())
  updatedAt            DateTime           @updatedAt

  organization Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)
}

enum SubscriptionStatus {
  TRIALING
  ACTIVE
  PAST_DUE
  CANCELED
  UNPAID
}

model ApiKey {
  id          String    @id @default(cuid())
  orgId       String
  userId      String
  name        String
  keyPrefix   String    // First 8 chars for identification
  keyHash     String    // SHA-256 hash of full key
  permissions String[]  @default([])
  rateLimit   Int       @default(100) // requests per minute
  lastUsed    DateTime?
  expiresAt   DateTime?
  createdAt   DateTime  @default(now())

  organization Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)
  user         User         @relation(fields: [userId], references: [id])

  @@index([orgId])
  @@index([keyHash])
}

model Invitation {
  id        String           @id @default(cuid())
  orgId     String
  email     String
  role      Role             @default(MEMBER)
  token     String           @unique
  status    InvitationStatus @default(PENDING)
  expiresAt DateTime
  createdAt DateTime         @default(now())

  organization Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)

  @@index([orgId])
  @@index([email])
  @@index([token])
}

enum InvitationStatus {
  PENDING
  ACCEPTED
  EXPIRED
  REVOKED
}

// ==================== WORKFLOWS ====================

model Workflow {
  id          String         @id @default(cuid())
  orgId       String
  name        String
  description String?
  status      WorkflowStatus @default(DRAFT)
  schedule    String?        // cron expression or "on-demand"
  agents      String[]       // array of agent IDs in execution order
  configuration Json         @default("{}")
  lastRun     DateTime?
  nextRun     DateTime?
  runCount    Int            @default(0)
  createdBy   String
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt

  organization Organization   @relation(fields: [orgId], references: [id], onDelete: Cascade)
  runs         WorkflowRun[]

  @@index([orgId])
  @@index([status])
  @@index([createdBy])
}

model WorkflowRun {
  id           String            @id @default(cuid())
  workflowId   String
  orgId        String
  status       WorkflowRunStatus @default(PENDING)
  input        Json              @default("{}")
  output       Json?
  startedAt    DateTime          @default(now())
  completedAt  DateTime?
  errorMessage String?

  workflow Workflow @relation(fields: [workflowId], references: [id], onDelete: Cascade)

  @@index([workflowId])
  @@index([orgId])
  @@index([status])
}

enum WorkflowStatus {
  DRAFT
  ACTIVE
  PAUSED
  ARCHIVED
}

enum WorkflowRunStatus {
  PENDING
  RUNNING
  COMPLETED
  FAILED
  CANCELLED
}

// ==================== REPORTS ====================

model Report {
  id          String       @id @default(cuid())
  orgId       String
  title       String
  description String?
  type        ReportType
  status      ReportStatus @default(DRAFT)
  content     Json         @default("{}")
  thumbnail   String?
  agentId     String?      // agent that generated this report
  views       Int          @default(0)
  createdBy   String
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  organization Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)

  @@index([orgId])
  @@index([status])
  @@index([type])
  @@index([createdBy])
}

enum ReportType {
  PRESENTATION
  DASHBOARD
  PDF
  EXPORT
  INFOGRAPHIC
}

enum ReportStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

// ==================== DASHBOARDS ====================

model Dashboard {
  id          String          @id @default(cuid())
  orgId       String
  name        String
  description String?
  layout      Json            @default("[]") // grid layout configuration
  widgets     Json            @default("[]") // array of widget configurations
  status      DashboardStatus @default(DRAFT)
  isPublic    Boolean         @default(false)
  views       Int             @default(0)
  createdBy   String
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt

  organization Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)

  @@index([orgId])
  @@index([status])
  @@index([createdBy])
}

enum DashboardStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

// ==================== CROSSTABS ====================

model Crosstab {
  id          String   @id @default(cuid())
  orgId       String
  name        String
  description String?
  audiences   String[] // array of audience IDs
  metrics     String[] // array of metric identifiers
  filters     Json     @default("{}")
  results     Json?    // cached results
  views       Int      @default(0)
  createdBy   String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  organization Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)

  @@index([orgId])
  @@index([createdBy])
}

// ==================== AUDIENCES ====================

model Audience {
  id           String   @id @default(cuid())
  orgId        String
  name         String
  description  String?
  criteria     Json     @default("{}") // audience definition criteria
  size         Int?     // estimated audience size
  markets      String[] // array of market codes
  isFavorite   Boolean  @default(false)
  lastUsed     DateTime?
  usageCount   Int      @default(0)
  createdBy    String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  organization Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)

  @@index([orgId])
  @@index([createdBy])
  @@index([isFavorite])
}

// ==================== MEMORY / CONTEXT ====================

model Memory {
  id          String     @id @default(cuid())
  orgId       String
  agentId     String?
  type        MemoryType
  key         String
  value       Json
  metadata    Json       @default("{}")
  expiresAt   DateTime?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  organization Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)

  @@unique([orgId, agentId, type, key])
  @@index([orgId])
  @@index([agentId])
  @@index([type])
}

enum MemoryType {
  CONTEXT
  PREFERENCE
  FACT
  CONVERSATION
  CACHE
}

// ==================== CHARTS ====================

model Chart {
  id          String      @id @default(cuid())
  orgId       String
  name        String
  description String?
  type        ChartType
  config      Json        @default("{}") // chart configuration
  data        Json?       // cached data
  dataSource  String?     // reference to data source
  status      ChartStatus @default(DRAFT)
  createdBy   String
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  organization Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)

  @@index([orgId])
  @@index([type])
  @@index([createdBy])
}

enum ChartType {
  BAR
  LINE
  PIE
  DONUT
  AREA
  SCATTER
  HEATMAP
  TREEMAP
  FUNNEL
  RADAR
}

enum ChartStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

// ==================== TEMPLATES ====================

model Template {
  id          String   @id @default(cuid())
  orgId       String
  name        String
  description String?
  category    TemplateCategory
  prompt      String   @db.Text
  tags        String[]
  variables   Json     @default("[]") // variable definitions
  isGlobal    Boolean  @default(false) // available to all organizations
  isFavorite  Boolean  @default(false)
  usageCount  Int      @default(0)
  lastUsed    DateTime?
  createdBy   String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  organization Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)
  creator      User         @relation(fields: [createdBy], references: [id])

  @@index([orgId])
  @@index([category])
  @@index([createdBy])
  @@index([isGlobal])
}

enum TemplateCategory {
  RESEARCH
  ANALYSIS
  BRIEFS
  CUSTOM
}

// ==================== BRAND TRACKING ====================

model BrandTracking {
  id              String               @id @default(cuid())
  orgId           String
  brandName       String
  description     String?
  industry        String?
  competitors     Json                 @default("[]") // array of competitor brand names
  audiences       String[]             // audience IDs to track against
  metrics         Json                 @default("{}") // metric configurations
  trackingConfig  Json                 @default("{}") // advanced settings
  status          BrandTrackingStatus  @default(DRAFT)
  schedule        String?              // cron expression for auto-snapshots
  alertThresholds Json                 @default("{}") // alert configurations
  lastSnapshot    DateTime?
  nextSnapshot    DateTime?
  snapshotCount   Int                  @default(0)
  createdBy       String
  createdAt       DateTime             @default(now())
  updatedAt       DateTime             @updatedAt

  organization Organization            @relation(fields: [orgId], references: [id], onDelete: Cascade)
  snapshots    BrandTrackingSnapshot[]

  @@index([orgId])
  @@index([status])
  @@index([createdBy])
  @@index([brandName])
}

model BrandTrackingSnapshot {
  id               String        @id @default(cuid())
  brandTrackingId  String
  orgId            String
  snapshotDate     DateTime      @default(now())
  metrics          Json          @default("{}") // all metric values at this point in time
  brandHealth      Float?        // overall health score 0-100
  marketShare      Float?        // market share percentage
  sentimentScore   Float?        // sentiment -1 to 1
  awareness        Float?        // awareness percentage
  consideration    Float?        // consideration percentage
  preference       Float?        // preference percentage
  loyalty          Float?        // loyalty score
  nps              Float?        // net promoter score
  competitorData   Json          @default("{}") // competitor metrics
  audienceBreakdown Json         @default("{}") // metrics by audience segment
  insights         String[]      // AI-generated insights
  metadata         Json          @default("{}")
  createdAt        DateTime      @default(now())

  brandTracking BrandTracking  @relation(fields: [brandTrackingId], references: [id], onDelete: Cascade)
  organization  Organization   @relation(fields: [orgId], references: [id], onDelete: Cascade)

  @@index([brandTrackingId])
  @@index([orgId])
  @@index([snapshotDate])
}

enum BrandTrackingStatus {
  DRAFT
  ACTIVE
  PAUSED
  ARCHIVED
}

// ==================== TOOL MEMORY ====================

model ToolMemory {
  id          String    @id @default(cuid())
  orgId       String
  sessionId   String    // Workflow run or agent session
  toolName    String
  inputHash   String    // Hash of input params for deduplication
  output      Json
  resourceIds String[]  // IDs of created resources
  executionTimeMs Int   @default(0)
  tokensUsed  Int       @default(0)
  success     Boolean   @default(true)
  error       String?
  createdAt   DateTime  @default(now())
  expiresAt   DateTime?

  @@index([orgId, sessionId])
  @@index([toolName, inputHash])
  @@index([sessionId, createdAt])
  @@index([expiresAt])
}

// ==================== SUPER ADMIN PORTAL ====================

model SuperAdmin {
  id            String          @id @default(cuid())
  email         String          @unique
  name          String
  passwordHash  String
  role          SuperAdminRole  @default(ADMIN)
  permissions   String[]        @default([])
  isActive      Boolean         @default(true)
  lastLoginAt   DateTime?
  lastLoginIp   String?
  twoFactorSecret String?
  twoFactorEnabled Boolean      @default(false)
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt

  auditLogs     PlatformAuditLog[]
  sessions      SuperAdminSession[]

  @@index([email])
  @@index([role])
}

enum SuperAdminRole {
  SUPER_ADMIN    // Full platform access
  ADMIN          // Standard admin access
  SUPPORT        // Customer success/support
  ANALYST        // Read-only analytics access
}

model SuperAdminSession {
  id            String   @id @default(cuid())
  adminId       String
  token         String   @unique
  ipAddress     String?
  userAgent     String?
  expiresAt     DateTime
  createdAt     DateTime @default(now())

  admin SuperAdmin @relation(fields: [adminId], references: [id], onDelete: Cascade)

  @@index([adminId])
  @@index([token])
}

model FeatureFlag {
  id            String            @id @default(cuid())
  key           String            @unique
  name          String
  description   String?
  type          FeatureFlagType   @default(BOOLEAN)
  defaultValue  Json              @default("false")
  isEnabled     Boolean           @default(false)
  rolloutPercentage Int           @default(0)    // 0-100 for gradual rollout
  allowedOrgs   String[]          @default([])   // Specific org IDs that have access
  blockedOrgs   String[]          @default([])   // Org IDs explicitly blocked
  allowedPlans  PlanTier[]        @default([])   // Plan tiers that have access
  metadata      Json              @default("{}")
  createdBy     String?
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt

  @@index([key])
  @@index([isEnabled])
}

enum FeatureFlagType {
  BOOLEAN
  STRING
  NUMBER
  JSON
}

model SystemRule {
  id            String          @id @default(cuid())
  name          String
  description   String?
  type          SystemRuleType
  conditions    Json            @default("{}") // Rule conditions
  actions       Json            @default("{}") // Actions to take when rule triggers
  isActive      Boolean         @default(true)
  priority      Int             @default(0)    // Higher priority rules execute first
  appliesTo     String[]        @default([])   // Specific org IDs, empty = all
  excludeOrgs   String[]        @default([])   // Org IDs excluded from rule
  metadata      Json            @default("{}")
  triggerCount  Int             @default(0)
  lastTriggered DateTime?
  createdBy     String?
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt

  @@index([type])
  @@index([isActive])
  @@index([priority])
}

enum SystemRuleType {
  RATE_LIMIT       // Rate limiting rules
  CONTENT_POLICY   // Content moderation rules
  SECURITY         // Security-related rules
  BILLING          // Billing/payment rules
  USAGE            // Usage limit rules
  COMPLIANCE       // Compliance rules (GDPR, etc.)
  NOTIFICATION     // Notification trigger rules
  AUTO_SUSPEND     // Auto-suspension rules
}

model UserBan {
  id            String        @id @default(cuid())
  userId        String
  orgId         String?       // If null, user is banned platform-wide
  reason        String
  bannedBy      String        // Super admin ID
  banType       BanType       @default(TEMPORARY)
  expiresAt     DateTime?     // Null for permanent bans
  appealStatus  AppealStatus  @default(NONE)
  appealNotes   String?
  metadata      Json          @default("{}")
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  @@index([userId])
  @@index([orgId])
  @@index([banType])
  @@index([expiresAt])
}

enum BanType {
  TEMPORARY
  PERMANENT
  SHADOW        // User can still access but actions are limited
}

enum AppealStatus {
  NONE
  PENDING
  APPROVED
  REJECTED
}

model SupportTicket {
  id            String              @id @default(cuid())
  ticketNumber  String              @unique
  orgId         String
  userId        String?
  subject       String
  description   String              @db.Text
  category      TicketCategory
  priority      TicketPriority      @default(MEDIUM)
  status        TicketStatus        @default(OPEN)
  assignedTo    String?             // Super admin ID
  tags          String[]            @default([])
  metadata      Json                @default("{}")
  resolvedAt    DateTime?
  firstResponseAt DateTime?
  createdAt     DateTime            @default(now())
  updatedAt     DateTime            @updatedAt

  responses     TicketResponse[]

  @@index([orgId])
  @@index([userId])
  @@index([status])
  @@index([priority])
  @@index([assignedTo])
  @@index([ticketNumber])
}

enum TicketCategory {
  BILLING
  TECHNICAL
  FEATURE_REQUEST
  BUG_REPORT
  ACCOUNT
  SECURITY
  OTHER
}

enum TicketPriority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

enum TicketStatus {
  OPEN
  IN_PROGRESS
  WAITING_ON_CUSTOMER
  WAITING_ON_INTERNAL
  RESOLVED
  CLOSED
}

model TicketResponse {
  id            String   @id @default(cuid())
  ticketId      String
  responderId   String   // User ID or Super admin ID
  responderType String   // 'user' | 'admin'
  message       String   @db.Text
  isInternal    Boolean  @default(false) // Internal notes not visible to customer
  attachments   Json     @default("[]")
  createdAt     DateTime @default(now())

  ticket SupportTicket @relation(fields: [ticketId], references: [id], onDelete: Cascade)

  @@index([ticketId])
  @@index([responderId])
}

model TenantHealthScore {
  id                String   @id @default(cuid())
  orgId             String
  overallScore      Float    // 0-100
  engagementScore   Float    // User engagement metrics
  usageScore        Float    // Feature utilization
  healthIndicators  Json     @default("{}") // Detailed breakdown
  riskLevel         RiskLevel @default(HEALTHY)
  churnProbability  Float?   // 0-1 probability of churn
  recommendations   String[] @default([])
  calculatedAt      DateTime @default(now())

  @@index([orgId])
  @@index([riskLevel])
  @@index([calculatedAt])
}

enum RiskLevel {
  HEALTHY
  AT_RISK
  CRITICAL
}

model PlatformAuditLog {
  id            String   @id @default(cuid())
  adminId       String?
  action        String
  resourceType  String
  resourceId    String?
  targetOrgId   String?  // If action affects a specific org
  targetUserId  String?  // If action affects a specific user
  details       Json     @default("{}")
  ipAddress     String?
  userAgent     String?
  timestamp     DateTime @default(now())

  admin SuperAdmin? @relation(fields: [adminId], references: [id])

  @@index([adminId])
  @@index([action])
  @@index([resourceType])
  @@index([targetOrgId])
  @@index([targetUserId])
  @@index([timestamp])
}

model SystemNotification {
  id            String                    @id @default(cuid())
  title         String
  message       String                    @db.Text
  type          NotificationType
  targetType    NotificationTargetType    @default(ALL)
  targetOrgs    String[]                  @default([])  // Specific org IDs
  targetPlans   PlanTier[]                @default([])  // Specific plan tiers
  isActive      Boolean                   @default(true)
  scheduledFor  DateTime?
  expiresAt     DateTime?
  metadata      Json                      @default("{}")
  createdBy     String?
  createdAt     DateTime                  @default(now())
  updatedAt     DateTime                  @updatedAt

  @@index([type])
  @@index([isActive])
  @@index([scheduledFor])
}

enum NotificationType {
  INFO
  WARNING
  ALERT
  MAINTENANCE
  FEATURE
  PROMOTION
}

enum NotificationTargetType {
  ALL
  SPECIFIC_ORGS
  SPECIFIC_PLANS
}

model SystemConfig {
  id            String   @id @default(cuid())
  key           String   @unique
  value         Json
  description   String?
  category      String   @default("general")
  isPublic      Boolean  @default(false) // Can be accessed by non-admins
  updatedBy     String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([key])
  @@index([category])
}

model OrganizationSuspension {
  id            String            @id @default(cuid())
  orgId         String
  reason        String
  suspendedBy   String            // Super admin ID
  suspensionType SuspensionType   @default(FULL)
  expiresAt     DateTime?         // Null for indefinite
  isActive      Boolean           @default(true)
  notes         String?
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt

  @@index([orgId])
  @@index([isActive])
  @@index([expiresAt])
}

enum SuspensionType {
  FULL           // Complete suspension - no access
  PARTIAL        // Limited functionality
  BILLING_HOLD   // Suspended due to billing issues
  INVESTIGATION  // Under investigation
}

// ==================== DATA CHANGE TRACKING ====================

model EntityVersion {
  id            String     @id @default(cuid())
  orgId         String
  entityType    String     // 'audience' | 'crosstab' | 'insight' | 'chart' | 'report' | 'dashboard'
  entityId      String
  version       Int
  data          Json       // Full entity snapshot
  delta         Json?      // Changes from previous version (null for first version)
  changedFields String[]   // List of changed field names
  changeType    ChangeType
  changeSummary String?    // Human-readable summary of changes
  createdBy     String?
  createdAt     DateTime   @default(now())

  @@unique([entityType, entityId, version])
  @@index([orgId])
  @@index([orgId, entityType])
  @@index([entityType, entityId])
  @@index([createdAt])
  @@index([createdBy])
}

enum ChangeType {
  CREATE
  UPDATE
  DELETE
  REGENERATE  // For AI-generated content that was regenerated
  RESTORE     // Restored from a previous version
}

model AnalysisHistory {
  id              String    @id @default(cuid())
  orgId           String
  analysisType    String    // 'crosstab' | 'audience_insight' | 'brand_health' | 'market_analysis'
  referenceId     String    // ID of the analyzed entity
  analysisVersion Int
  results         Json      // Full analysis results
  aiInsights      String[]  // AI-generated insights at this point
  keyMetrics      Json      // Important metrics for comparison
  confidence      Float?    // Confidence score 0-1
  dataSourceDate  DateTime? // When underlying data was collected
  metadata        Json      @default("{}")
  createdAt       DateTime  @default(now())

  @@unique([analysisType, referenceId, analysisVersion])
  @@index([orgId])
  @@index([orgId, analysisType])
  @@index([analysisType, referenceId])
  @@index([createdAt])
}

model ChangeSummary {
  id                 String    @id @default(cuid())
  orgId              String
  period             String    // 'daily' | 'weekly' | 'monthly'
  periodStart        DateTime
  periodEnd          DateTime
  summaryType        String    // 'overview' | 'audiences' | 'insights' | 'brand' | 'charts'
  metrics            Json      // Aggregated change metrics
  highlights         Json      // Notable changes for display
  newItems           Int       @default(0)
  updatedItems       Int       @default(0)
  deletedItems       Int       @default(0)
  significantChanges Int       @default(0)
  topChanges         Json      @default("[]") // Array of most important changes
  createdAt          DateTime  @default(now())

  @@unique([orgId, period, periodStart, summaryType])
  @@index([orgId])
  @@index([orgId, period])
  @@index([periodStart, periodEnd])
}

model UserChangeTracker {
  id              String    @id @default(cuid())
  orgId           String
  userId          String
  lastVisit       DateTime  @default(now())
  lastSeenChanges DateTime  @default(now()) // When user last acknowledged changes
  preferences     Json      @default("{}") // User preferences for change notifications
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@unique([orgId, userId])
  @@index([orgId])
  @@index([userId])
}

model ChangeAlert {
  id              String           @id @default(cuid())
  orgId           String
  entityType      String
  entityId        String
  alertType       ChangeAlertType
  severity        AlertSeverity    @default(INFO)
  title           String
  message         String
  metric          String?          // The metric that triggered the alert
  previousValue   Json?            // Previous value
  currentValue    Json?            // Current value
  changePercent   Float?           // Percentage change
  threshold       Float?           // The threshold that was crossed
  isRead          Boolean          @default(false)
  isDismissed     Boolean          @default(false)
  metadata        Json             @default("{}")
  createdAt       DateTime         @default(now())

  @@index([orgId])
  @@index([orgId, entityType])
  @@index([orgId, isRead])
  @@index([orgId, alertType])
  @@index([createdAt])
}

enum ChangeAlertType {
  SIGNIFICANT_INCREASE
  SIGNIFICANT_DECREASE
  THRESHOLD_CROSSED
  TREND_REVERSAL
  NEW_DATA_AVAILABLE
  ANALYSIS_CHANGED
  ANOMALY_DETECTED
}

enum AlertSeverity {
  INFO
  WARNING
  CRITICAL
}
