// ==================== ANALYTICS & REPORTING ====================

model AnalyticsSnapshot {
  id              String            @id @default(cuid())
  type            SnapshotType
  period          String            // daily, weekly, monthly
  periodStart     DateTime
  periodEnd       DateTime

  // Platform metrics
  totalOrgs       Int               @default(0)
  activeOrgs      Int               @default(0)
  newOrgs         Int               @default(0)
  churnedOrgs     Int               @default(0)

  totalUsers      Int               @default(0)
  activeUsers     Int               @default(0)
  newUsers        Int               @default(0)

  // Usage metrics
  totalAgentRuns  Int               @default(0)
  totalTokens     BigInt            @default(0)
  totalApiCalls   BigInt            @default(0)
  totalStorage    BigInt            @default(0)

  // Revenue metrics (in cents)
  mrr             Int               @default(0)
  arr             Int               @default(0)
  newMrr          Int               @default(0)
  churnedMrr      Int               @default(0)
  expansionMrr    Int               @default(0)

  // Breakdown
  orgsByPlan      Json              @default("{}")
  orgsByRegion    Json              @default("{}")
  orgsByIndustry  Json              @default("{}")

  metrics         Json              @default("{}")
  metadata        Json              @default("{}")
  createdAt       DateTime          @default(now())

  @@unique([type, period, periodStart])
  @@index([type])
  @@index([period])
  @@index([periodStart])
}

enum SnapshotType {
  PLATFORM
  USAGE
  REVENUE
  ENGAGEMENT
  SECURITY
}

model CustomReport {
  id              String            @id @default(cuid())
  name            String
  description     String?
  type            CustomReportType
  query           Json              // Report definition/query
  schedule        String?           // Cron expression for scheduled reports
  recipients      String[]          @default([])
  format          String            @default("csv")

  isActive        Boolean           @default(true)
  lastRunAt       DateTime?
  nextRunAt       DateTime?
  lastResult      Json?

  createdBy       String?
  metadata        Json              @default("{}")
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt

  @@index([type])
  @@index([isActive])
  @@index([nextRunAt])
}

enum CustomReportType {
  USAGE
  REVENUE
  SECURITY
  COMPLIANCE
  USER_ACTIVITY
  CUSTOM_SQL
}

// ==================== COMMUNICATION & BROADCAST ====================

model BroadcastMessage {
  id              String            @id @default(cuid())
  title           String
  content         String            @db.Text
  contentHtml     String?           @db.Text
  type            BroadcastType
  priority        BroadcastPriority @default(NORMAL)

  // Targeting
  targetType      NotificationTargetType @default(ALL)
  targetOrgs      String[]          @default([])
  targetPlans     PlanTier[]        @default([])
  targetRoles     Role[]            @default([])

  // Delivery
  channels        BroadcastChannel[] @default([IN_APP])
  status          BroadcastStatus   @default(DRAFT)
  scheduledFor    DateTime?
  sentAt          DateTime?

  // Statistics
  totalRecipients Int               @default(0)
  delivered       Int               @default(0)
  opened          Int               @default(0)
  clicked         Int               @default(0)

  expiresAt       DateTime?
  createdBy       String?
  metadata        Json              @default("{}")
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt

  @@index([type])
  @@index([status])
  @@index([scheduledFor])
}

enum BroadcastType {
  ANNOUNCEMENT
  PRODUCT_UPDATE
  MAINTENANCE
  SECURITY_ALERT
  MARKETING
  SURVEY
}

enum BroadcastPriority {
  LOW
  NORMAL
  HIGH
  URGENT
}

enum BroadcastChannel {
  IN_APP
  EMAIL
  PUSH
  SMS
  SLACK
}

enum BroadcastStatus {
  DRAFT
  SCHEDULED
  SENDING
  SENT
  CANCELLED
}
